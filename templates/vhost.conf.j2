map $http_host $magesite {}

server {
  listen {{ magento_port }};

  {% if magento_ssl: %}
  listen 443 ssl;

  ssl_certificate     {{ magento_ssl_crt_file }};
  ssl_certificate_key {{ magento_ssl_key_file }};
  ssl_protocols       SSLv3 TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers         HIGH:!aNULL:!MD5;
  {% endif %}

  client_max_body_size 4G;

  access_log  {{ magento_access_log }};
  error_log  {{ magento_error_log }};

  server_name  {{ magento_hostnames|join(' ') }};
  root /var/www/{{ magento_project_name }}/current;
  autoindex off;
  keepalive_timeout  10;

  gzip            on;
  gzip_comp_level 6;
  gzip_proxied    any;
  gzip_types      text/plain text/html text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript;

  location / {
    index index.html index.php;

    {% if magento_auth %}
    auth_basic "Restricted";
    auth_basic_user_file /var/www/{{ magento_project_name }}/.htpasswd;
    {% endif %}

    try_files $uri $uri/ @handler;
    expires 30d;
  }

  {% if magento_ssl: %}
  # Ensure we force SSL for customer and checkout pages
  location ~ (^/(customer/|checkout/)) {
    if ( $scheme = "http" ) {
        return 301 https://$host$request_uri;
    }
    fastcgi_param HTTPS on;
    try_files $uri $uri/ @handler;
  }
  {% endif %}

  # These locations would be hidden by .htaccess normally
  location ^~ /app/                { deny all; }
  location ^~ /includes/           { deny all; }
  location ^~ /lib/                { deny all; }
  location ^~ /media/downloadable/ { deny all; }
  location ^~ /pkginfo/            { deny all; }
  location ^~ /report/config.xml   { deny all; }
  location ^~ /var/                { deny all; }

  # Disable .htaccess and other hidden files
  location  /. {
    return 404;
  }

  location @handler {
    rewrite / /index.php;
  }

  location ~ .php/ {
    rewrite ^(.*.php)/ $1 last;
  }

  location ~* \.(ico|css|js|gif|jpe?g|png)$ {
    expires max;
    add_header Pragma public;
    add_header Cache-Control "public, must-revalidate, proxy-revalidate";
  }

  location ~ .php$ {
    if (!-e $request_filename) { rewrite / /index.php last; }

    expires         off;
    fastcgi_pass    unix:/var/run/php5-fpm.sock;
    fastcgi_param   HTTPS $fastcgi_https;
    fastcgi_param   SCRIPT_FILENAME  $document_root$fastcgi_script_name;
    fastcgi_param   MAGE_RUN_CODE default;
    fastcgi_param   MAGE_RUN_TYPE store;
    include         fastcgi_params;
  }

}
